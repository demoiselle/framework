<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<artifactId>demoiselle-framework-build</artifactId>
	<version>2.3.0-BETA1</version>
	<packaging>pom</packaging>

	<parent>
		<groupId>br.gov.frameworkdemoiselle</groupId>
		<artifactId>demoiselle-build-parent</artifactId>
		<version>1</version>
		<relativePath>../internal/parent/build/demoiselle/pom.xml</relativePath>
	</parent>

	<name>Build Aggregator</name>
	<description>
		A liberação de versões do framework deve ser feita a partir deste build, que fará automaticamente o build
		de todos os artefatos com versionamento sincronizado. Jamais gere uma versão do framework sem utilizar este build.
	</description>

	<modules>
		<module>impl</module>
		<module>parent</module>
		<module>archetype</module>
		<module>documentation</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<site>
			<id>demoiselle.sourceforge.net</id>
			<url>${site.url}</url>
		</site>
	</distributionManagement>

	<scm>
		<connection>scm:git:git://github.com/demoiselle/${project.alias}.git</connection>
		<developerConnection>scm:git:git://github.com/demoiselle/${project.alias}.git</developerConnection>
		<url>scm:git:git://github.com/demoiselle/${project.alias}.git</url>
	</scm>

	<repositories>
		<repository>
			<id>demoiselle.sourceforge.net</id>
			<name>Demoiselle Maven Repository</name>
			<url>http://demoiselle.sourceforge.net/repository/release</url>
		</repository>
	</repositories>

	<properties>
		<project.alias>framework</project.alias>
		<project.nextVersion>2.3.0-BETA2-SNAPSHOT</project.nextVersion>
	</properties>
</project>
